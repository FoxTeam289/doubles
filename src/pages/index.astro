---
import Layout from "../layouts/Layout.astro";
import Bracelets from "../components/Bracelets";
---

<Layout title="Парные браслеты КОНСТРУКТОР">
  <Bracelets />
</Layout>

<style lang="scss">
  body {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.5s ease 0s;

    &.ready {
      opacity: 1;
      pointer-events: auto;
    }
  }
</style>

<script>
  import { initBraslet } from "../scripts/braslet/initBraslet";

  window.addEventListener("load", () => {
    initBraslet();

    document.body.classList.add("ready");
  });
</script>
